# {{ ansible_managed }}

{% if resolv_search %}
search {{ resolv_search|join(" ") }}
{% endif %}

{% if resolv_domain %}
domain {{ resolv_domain }}
{% endif %}

{% for srv in resolv_nameservers %}
nameserver {{ srv }}
{% endfor %}

{% for sort in resolv_sortlist %}
sortlist {{ sort }}
{% endfor %}

{% if resolv_options %}
options {{ resolv_options|join(" ") }}
{% endif %}
